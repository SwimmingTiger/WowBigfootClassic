<Bindings>
	<Binding name="MONKEYQUEST_CLOSE" runOnUp="true" header="MONKEYQUEST">
		if (keystate == "down") then
			MonkeyQuestSlash_ToggleDisplay();
		end
	</Binding>
	<Binding name="MONKEYQUEST_MINIMIZE" runOnUp="true">
		if (keystate == "down") then
			MonkeyQuestMinimizeButton_OnClick();
		end
	</Binding>
	<Binding name="MONKEYQUEST_HIDDEN" runOnUp="true">
		if (keystate == "down") then
			MonkeyQuestSlash_ToggleShowHidden();
		end
	</Binding>
	<Binding name="MONKEYQUEST_NOHEADERS" runOnUp="true">
		if (keystate == "down") then
			MonkeyQuestSlash_ToggleNoHeaders();
		end
	</Binding>
</Bindings>
