    <!-- ================================================
         MAIN FRAME
         =================================================-->
    <Frame name="WebDKP_BidFrame" toplevel="true" parent="UIParent" movable="true" hidden="true">
        <!-- EVENT HANDLERS FOR THE MASTER FRAME -->
        <Scripts>
            <OnMouseDown>
                self:StartMoving(self);
                getglobal("WebDKP_BidFrameItem"):ClearFocus(self);
                getglobal("WebDKP_BidFrameTime"):ClearFocus(self);
            </OnMouseDown>
            <OnMouseUp>
                self:StopMovingOrSizing(self);
            </OnMouseUp>
        </Scripts>
        <Size>
            <AbsDimension x="780" y="630"/>
        </Size>
        <Anchors>
            <Anchor point="LEFT"/>
        </Anchors>
        <Backdrop bgFile="Interface\TutorialFrame\TutorialFrameBackground"
                  edgeFile="Interface\Tooltips\UI-Tooltip-Border" tile="true">
            <EdgeSize>
                <AbsValue val="16"/>
            </EdgeSize>
            <TileSize>
                <AbsValue val="16"/>
            </TileSize>
            <BackgroundInsets>
                <AbsInset left="5" right="5" top="5" bottom="5"/>
            </BackgroundInsets>
        </Backdrop>

        <!-- HEADER / ADDON TITLE-->
        <Layers>
            <Layer level="ARTWORK">
                <Texture name="$parentHeaderTexture" file="Interface\DialogFrame\UI-DialogBox-Header">
                    <Size>
                        <AbsDimension x="370" y="64"/>
                    </Size>
                    <Anchors>
                        <Anchor point="TOP">
                            <Offset>
                                <AbsDimension x="0" y="20"/>
                            </Offset>
                        </Anchor>
                    </Anchors>
                </Texture>
                <FontString name="$parentTitle" inherits="GameFontNormal">
                    <Anchors>
                        <Anchor point="TOP" relativeTo="$parentHeaderTexture">
                            <Offset>
                                <AbsDimension x="0" y="-14"/>
                            </Offset>
                        </Anchor>
                    </Anchors>
                </FontString>
            </Layer>
        </Layers>
        <!-- FRAMES (contains all gui elements -->
        <Frames>
            <!-- ITEM BEING BID ON -->
            <EditBox name="$parentItem" inherits="WebDKPEditBoxTemplate">
                <Size>
                    <AbsDimension x="130" y="32"></AbsDimension>
                </Size>
                <Anchors>
                    <Anchor point="TOPLEFT">
                        <Offset>
                            <AbsDimension x="125" y="-25"/>
                        </Offset>
                    </Anchor>
                </Anchors>
                <Layers>
                    <Layer level="ARTWORK">
                        <FontString name="$parentLabel" inherits="GameFontNormal">
                            <Anchors>
                                <Anchor point="TOPLEFT">
                                    <Offset>
                                        <AbsDimension x="-100" y="-8"/>
                                    </Offset>
                                </Anchor>
                            </Anchors>
                        </FontString>
                    </Layer>
                </Layers>
                <Scripts>
                    <OnLoad>
                        getglobal(self:GetParent(self):GetName(self).."Item"):SetAutoFocus( false );
                    </OnLoad>
                    <OnEscapePressed>
                        getglobal(self:GetParent(self):GetName(self).."Item"):ClearFocus(self);
                    </OnEscapePressed>
                    <OnEnterPressed>
                        getglobal(self:GetParent(self):GetName(self).."Item"):ClearFocus(self);
                    </OnEnterPressed>
                    <OnTextChanged>
                        WebDKP_Bid_ItemNameChanged(self);
                    </OnTextChanged>
                </Scripts>
            </EditBox>
            <EditBox name="$parentStartingBid" inherits="WebDKPEditBoxTemplate">
                <Size>
                    <AbsDimension x="130" y="32"></AbsDimension>
                </Size>
                <Anchors>
                    <Anchor point="TOPLEFT" relativeTo="$parentItem" relativePoint="BOTTOMLEFT">
                        <Offset>
                            <AbsDimension x="0" y="-5"/>
                        </Offset>
                    </Anchor>
                </Anchors>
                <Layers>
                    <Layer level="ARTWORK">
                        <FontString name="$parentLabel" inherits="GameFontNormal">
                            <Anchors>
                                <Anchor point="TOPLEFT">
                                    <Offset>
                                        <AbsDimension x="-100" y="-8"/>
                                    </Offset>
                                </Anchor>
                            </Anchors>
                        </FontString>
                    </Layer>
                </Layers>
                <Scripts>
                    <OnLoad>
                        getglobal(self:GetParent(self):GetName(self).."StartingBid"):SetAutoFocus( false );
                    </OnLoad>
                    <OnEscapePressed>
                        getglobal(self:GetParent(self):GetName(self).."StartingBid"):ClearFocus(self);
                    </OnEscapePressed>
                    <OnEnterPressed>
                        getglobal(self:GetParent(self):GetName(self).."StartingBid"):ClearFocus(self);
                    </OnEnterPressed>
                    <OnTextChanged>
                        WebDKP_Options["StartBid"] =
