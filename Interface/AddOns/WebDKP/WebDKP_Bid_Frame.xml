        <Scripts>
            <OnMouseDown>
                self:StartMoving(self);
            </OnMouseDown>
            <OnMouseUp>
                self:StopMovingOrSizing(self);
            </OnMouseUp>
        </Scripts>
        <Size>
            <AbsDimension x="600" y="125"/>
