				</Scripts>
			</Button>
			<Button name="$ParentBatFont" inherits="OptionsButtonTemplate" text="DCT_TEXT_OPANI_BATFONT">
				<Size>
					<AbsDimension x="200" y="24"/>
				</Size>
				<Anchors>
					<Anchor point="TOPLEFT" relativePoint="TOPLEFT">
						<Offset>
							<AbsDimension x="5" y="-55"/>
						</Offset>
					</Anchor>
				</Anchors>	
				<Scripts>
					<OnClick>
						DCT_Opani_BatFont(self)
					</OnClick>
					<OnShow>
						self:SetWidth(200)
