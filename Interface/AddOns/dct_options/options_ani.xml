		<Size>
			<AbsDimension x="490" y="360"/>
		</Size>
		<Anchors>
			<Anchor point="TOPLEFT">
				<Offset>
					<AbsDimension x="180" y="-50"/>
				</Offset>
			</Anchor>
		</Anchors>	
		<Frames>		
		    <Button name="$ParentFrameDDC" inherits="DCTUIDropDownMenuTemplate">				
