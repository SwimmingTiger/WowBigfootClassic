								<AbsDimension x="-43" y="2"/>
							</Offset>
						</Anchor>
					</Anchors>
				</FontString>
			</Layer>
		</Layers>
		<Frames>
			<Button name="$parentButton">
				<Size>
					<AbsDimension x="24" y="24"/>
				</Size>
				<Anchors>
					<Anchor point="TOPRIGHT" relativeTo="$parentRight">
						<Offset>
							<AbsDimension x="-16" y="-18"/>
						</Offset>
					</Anchor>
				</Anchors>
				<Scripts>
					<OnClick>
						BToggleDropDownMenu(nil, nil, self:GetParent());
						PlaySound(SOUNDKIT.IG_MAINMENU_OPTION_CHECKBOX_ON);
					</OnClick>
				</Scripts>
				<NormalTexture name="$parentNormalTexture" file="Interface\ChatFrame\UI-ChatIcon-ScrollDown-Up">
					<Size>
						<AbsDimension x="24" y="24"/>
					</Size>
					<Anchors>
						<Anchor point="RIGHT"/>
					</Anchors>
				</NormalTexture>
				<PushedTexture name="$parentPushedTexture" file="Interface\ChatFrame\UI-ChatIcon-ScrollDown-Down">
					<Size>
						<AbsDimension x="24" y="24"/>
					</Size>
					<Anchors>
						<Anchor point="RIGHT"/>
					</Anchors>
				</PushedTexture>
				<DisabledTexture name="$parentDisabledTexture" file="Interface\ChatFrame\UI-ChatIcon-ScrollDown-Disabled">
					<Size>
						<AbsDimension x="24" y="24"/>
					</Size>
					<Anchors>
						<Anchor point="RIGHT"/>
					</Anchors>
				</DisabledTexture>
				<HighlightTexture name="$parentHighlightTexture" file="Interface\Buttons\UI-Common-MouseHilight" alphaMode="ADD">
					<Size>
						<AbsDimension x="24" y="24"/>
					</Size>
					<Anchors>
						<Anchor point="RIGHT"/>
					</Anchors>
				</HighlightTexture>
			</Button>
		</Frames>
		<Scripts>
			<OnHide>
				BCloseDropDownMenus();
			</OnHide>
		</Scripts>
	</Frame>

	<Button name="BDropDownList1" toplevel="true" frameStrata="FULLSCREEN_DIALOG" inherits="BDropDownListTemplate" hidden="true" id="1">
		<Size>
			<AbsDimension x="180" y="10"/>
		</Size>
		<Scripts>
			<OnLoad>
				local fontName, fontHeight, fontFlags = getglobal("BDropDownList1Button1NormalText"):GetFont();
				BDROPDOWNMENU_DEFAULT_TEXT_HEIGHT = fontHeight;
			</OnLoad>
		</Scripts>
	</Button>

	<Button name="BDropDownList2" toplevel="true" frameStrata="FULLSCREEN_DIALOG" inherits="BDropDownListTemplate" hidden="true" id="2">
		<Size>
			<AbsDimension x="180" y="10"/>
		</Size>
	</Button>
</Ui>
